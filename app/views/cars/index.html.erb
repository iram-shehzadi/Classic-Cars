<h1> Browse All Cars </h1>

<div class="container">
  <div class="row">
    <% @cars.each do |car| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card">
          <%= image_tag 'https://images.unsplash.com/photo-1500073505333-7df7a702e5f0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=986&q=80', class: "card-img" %>
            <div class="card-description">
              <div class="card-title">
                <p class="left-align"><%= car.manufacturer %>, <%= car.model %></p>
                <p class="right-align"> <%= '*' * car.rating %></p>
              </div>
              <div class="card-information">
                <ul>
                  <li>Unique collectors item car </li>
                  <li>Mint condition</li>
                  <li>Running smoothly</li>
                  <li>Perfect for trip back in time</li>
                </ul>
              </div>
            </div>
          <%= link_to "", car_path(car), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>





