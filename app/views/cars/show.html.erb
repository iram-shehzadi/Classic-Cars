<div class="container">
  <div class="row">
    <div class="col-6">
      <%= image_tag @car.photos.first.service_url, class: 'first-car-photo' %>
    </div>
    <div class="col-6">
      <div class="row">
        <% @car.photos.drop(1).each do |photo| %>
          <div class="col-6">
            <%= image_tag photo.service_url, class: 'cars-photo' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">
        <%#= cl_image_tag @car.photo.key, class:'large-image' %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="info-container">
          <h1 class ="less"><%= @car.manufacturer %> <%= @car.model %></h1>
            <ul>
              <li class="lessli"><%= @car.year %></li>
              <li class="lessli"><%= @car.price %></li>
              <li class="lessli"><%= @car.address %></li>
              <li class="lessli"><%= @car.description %></li>
              <li><%= 'â˜†' * 5 %></li>
              <button type="button" class="btn btn-link">
            <%= link_to 'Book car', new_car_booking_path(@car) %>
            </button>
            </ul>
          </div>
      </div>
  </div>
</div>

<div class="car-container" >

</div>
<div class="links">
<button type="button" class="btn btn-link">
<%= link_to 'Back', cars_path %>
</button>
<button type="button" class="btn btn-link">
<%= link_to 'Book car', new_car_booking_path(@car) %>
</button>
<button type="button" class="btn btn-link">
<%= link_to 'Edit car', edit_car_path(@car) %>
</button>
</div>

</div>

<div class="d-flex" style="margin: 0 30px;">
  <div id="map"
       style="width: 50%;
       height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div style="width: 50vw; padding-left: 15px;">
    <div class ="review-header">
    <h3>Reviews</h3>
      <% if @car.reviews.empty? %>
        <p>Be the first to leave a review</p>
      <% else %>
    </div>
      <ul class="list-group">
        <% @car.reviews.each do |review| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span class="badge badge-primary badge-pill">
              <% counter = 0 %>
              <% 5.times do %>
                <i class="fa <%= review.rating > counter ? 'fa-star' : 'fa-star-o' %>"></i>
                <% counter += 1 %>
              <% end %>
            </span>
            <%= review.content %>
          </li>
        <% end %>
      </ul>
      <% end %>

  </div>
</div>

  <% if @car.bookings.where(user: current_user).any? %>
    <%= render "reviews/new", car: @car, review: @review, booking: @car.bookings.where(user: current_user).last %>
  <% end %>

